import java.util.Scanner;

public class test {
    public static void main(String[] args) 
	{ 
    
    Scanner reader = new Scanner(System.in);


System.out.print("Type in the amount of work hours: "); 
		float floatNumber = reader.nextFloat();
		
		
		System.out.print("Type in the salary per hour: "); 
		float floatNumber2 = reader.nextFloat();
		
    
    System.out.print("Type in the tax percent: "); 
		float floatNumber3 = reader.nextFloat();
		
		
		float floatNumber4 = (floatNumber * floatNumber2);
		System.out.println("Salary before taxes: " + (floatNumber4));
    
    float floatNumber5 = (floatNumber3 / 100 * floatNumber4);
    
    System.out.println("Amount of tax: " + (floatNumber5));
    
    float floatNumber6 = floatNumber4 - floatNumber5;
		System.out.println("Salary after taxes: " + (floatNumber6));
    
	}
}
